<%= form_for @recipe do |form| %>
    <div>
      <%= form.label :title, class: "required" %>
      <%= form.text_field :title, required: true %>
    </div>
    <div>
      <%= form.label :description %>
      <%= form.text_field :description %>
    </div>
    <div>
      <%= form.submit %>
    </div>
<% end %>
